QPushButton
{
    font-size: 13px;
    border-radius: 8px;
    padding: 7px 12px;
    text-align: center;
    text-decoration: none;
    background-color: #FFFAFA;
    color: black;
    border: 1px solid #606060;
}
QPushButton:hover
{
    background-color: #606060;
    border: 1px solid white;
    color: white;
}
QPushButton:pressed {
    background-color: darkGray;
}
QPushButton:disabled
{
    background-color: #cccccc;
    color:white;
    border:1px solid gray;
}

QCheckBox
{
    font-size: 14px;
    border-radius:8px;
}
QGroupBox
{
    font-size: 14px;
    border: 1px solid rgb(1, 130, 153);
}
QGroupBox::indicator {
      width: 13px;
      height: 13px;
  }

QGroupBox:title
{
    color: rgb(1, 130, 153);
    left: 40px;
    top: -3;
}

QWidget
{
