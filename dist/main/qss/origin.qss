QComboBox
{
    border-radius:4px;
    border:1px solid black;
    color: #000;
    font: normal normal 12px "Microsoft YaHei";
    background: transparent;
}
QComboBox:hover
{
    border:2px solid gray;
}

QComboBox QAbstractItemView {
    outline: 0px solid gray;   /* 选定项的虚框 */
    border: 1px solid black;   /* 整个下拉窗体的边框 */
    color: darkBlue;
    background-color: white;   /* 整个下拉窗体的背景色 */
    selection-background-color: darkBlue;   /* 整个下拉窗体被选中项的背景色 */
}
QComboBox:disabled
{
/*    background-color:rgb(200, 200, 200);*/
    border:1px solid gray;
}

QComboBox::down-arrow {
      image: url('icon/down_arrow.png');
}

QLineEdit
{
    border: 1px solid gray;/*设置边框的粗细，以及颜色*/
    border-radius: 4px;/*设置圆角的大小*/
    padding: 0 2px;/*如果没有内容光标在开始往后移动0.8像素点*/
    selection-background-color: darkGray;
    height:20px;
    font-size:14px;
/*    font-weight:bold;*/
}
QLineEdit:disabled
{
    background-color:#f0f0f0;
}

QLineEdit:hover
{
    border:2px solid gray;
}
QLineEdit:focus
{
    border:2px solid rgb(78,113,242);
}

